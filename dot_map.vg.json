{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1200,
    "height": 600,
    "title": "Worldwide Airports per Dot",
    "background": "#cce6ff",
    "projection": {"type": "equirectangular"},
    "layer": [
        {
            "data": {
                "url": "./Dataset/ne_50m_admin_0_countries.json",
                "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "darkgray", "strokeWidth": 0.5}
            },
        {
            "data": {
                "url": "./Dataset/ne_50m_graticules_30.json",
                "format": {"type": "topojson", "feature": "ne_50m_graticules_30"}
            },
            "mark": {"type": "geoshape", "stroke": "black", "strokeOpacity": 0.2, "strokeWidth": 1}
            },
        {
            "data": {
              "url": "./Dataset/airports.csv"
            },
            "mark": {"type": "circle", "size": 10, "color": "steelblue"},
            "encoding": {
              "longitude": {"field": "Longitude", "type": "quantitative"},
              "latitude": {"field": "Latitude", "type": "quantitative"}
            }
          }
    ]
  }