{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700, "height": 200,
    "title": "Total Malaysia Passenger Traffic",
    "data": {
        "url": "../Dataset/monthly_long.csv"
    },
    "mark": "area",
    "params": [{
        "name": "Category",
        "select": {"type": "point", "fields": ["Category"]},
        "bind": "legend"
    }],
    "encoding": {
        "x": {
            "timeUnit": "yearmonth",
            "field": "Date",
            "axis": {"domain": false, "format": "%Y", "tickSize": 0, "title": "Year"}
        },
        "y": {
            "field": "Value",
            "type": "quantitative",
            "axis": null,
            "stack": "center"
        },
        "color": {
            "field": "Category",
            "type": "nominal",
            "scale": {
                "range": ["#1f77b4", "#ff7f0e"]
            },
            "legend": {"title": "Passenger Type"}
        },
        "opacity": {
            "condition": {"param": "Category", "value": 1},
            "value": 0.2
        },
        "tooltip": [
            {"field": "Date", "type": "temporal", "title": "Date"},
            {"field": "Value", "type": "quantitative", "title": "Value"},
            {"field": "Category", "type": "nominal", "title": "Category"}
        ]
    }
}