{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 600,
  "width": 800,
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "../Dataset/ne_10m_admin_1_states_provinces.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": {
        "fill": "#ddd",
        "stroke": "#fff",
        "strokeWidth": 1,
        "type": "geoshape"
      }
    },
    {
      "mark": {"type": "rule", "color": "#000", "opacity": 0.35},
      "data": {
        "url": "../Dataset/malaysia_routes.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {"filter": {"param": "org", "empty": false}},
        {
          "lookup": "Source_Airport",
          "from": {
            "data": {
              "url": "../Dataset/my_airports_cleaned.csv",
              "format": {"type": "csv"}
            },
            "key": "iata_code",
            "fields": ["latitude", "longitude"]
        }},
        {
          "lookup": "Destination_Airport",
          "from": {
            "data": {
              "url": "../Dataset/my_airports_cleaned.csv",
              "format": {"type": "csv"}
            },
            "key": "iata_code",
            "fields": ["latitude2", "longitude2"]
          }
        }
      ],
      "encoding": {
        "latitude": {"field": "latitude", "type": "quantitative"},
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude2": {"field": "latitude2", "type": "quantitative"},
        "longitude2": {"field": "longitude2", "type": "quantitative"}
      }
    },
    {
      "mark": {"type": "circle"},
      "data": {
        "url": "../Dataset/malaysia_routes.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "aggregate": [{"op": "count", "as": "routes"}], "groupby": ["Source_Airport"]},
        {
          "lookup": "Source_Airport",
          "from": {
            "data": {
              "url": "../Dataset/my_airports_cleaned.csv",
              "format": {"type": "csv"}
            },
            "key": "iata_code",
            "fields": ["latitude_deg", "longitude_deg"]
          },
          "as": ["latitude", "longitude"]
        }
      ],
      "params": [{
        "name": "org",
        "select": {"type": "point", "on": "pointerover", "nearest": true, "fields": ["Source_Airport"]}
      }],
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "routes",
          "type": "quantitative",
          "scale": {"range": [0, 1000]},
          "title": "Number of Routes"
        },
        "tooltip": [
          {"field": "Source_Airport", "type": "nominal"},
          {"field": "routes", "type": "quantitative"}
        ],
        "order": {
          "field": "routes",
          "type": "quantitative",
          "sort": "descending"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": 5,
        "fontSize": 12,
        "fontWeight": "bold",
        "fill": "black"
      },
      "encoding": {
        "text": {
          "signal": "org && org.Source_Airport ? JSON.stringify(org) : 'No hover'"
        },
        "x": {"value": 10},
        "y": {"value": 10}
      }
    }
  ]
}