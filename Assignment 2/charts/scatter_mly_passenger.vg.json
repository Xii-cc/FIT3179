{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Monthly Passenger Traffic Heat Map",
    "width": 500,
    "height": 350,
    "data": {
        "url": "../Dataset/monthly.csv"
    },
    "transform": [
        {
            "window": [
                {
                    "op": "rank",
                    "field": "Total",
                    "as": "Rank"
                }
            ],
            "groupby": ["Year"],
            "sort": [{"field": "Total", "order": "descending"}]
        }
    ],
    "config": {
        "view": {
            "strokeWidth": 0,
            "step": 13
        },
        "axis": {
            "domain": false
        }
    },
    "mark": "point",
    "encoding": {
        "x": {
            "field": "Month",
            "type": "ordinal",
            "title": "Month",
            "sort": null
        },
        "y": {
            "field": "Rank",
            "type": "ordinal",
            "title": "Rank"
        },
        "tooltip": [
            {
                "field": "Year",
                "type": "ordinal",
                "title": "Year"
            },
            {
                "field": "Month",
                "type": "ordinal",
                "title": "Month"
            },
            {
                "field": "Total",
                "type": "quantitative",
                "title": "Total Passenger Traffic"
            },
            {
                "field": "Rank",
                "type": "ordinal",
                "title": "Monthly Rank"
            }
        ]
    }
}