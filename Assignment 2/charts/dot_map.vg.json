{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1200,
    "height": 600,
    "title": "Dot Map Showing the Airports Worldwide",
    "background": "#cce6ff",
    "projection": {"type": "equirectangular"},
    "layer": [
        {
            "data": {
                "url": "../Dataset/ne_50m_admin_0_countries.json",
                "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "darkgray"}
            },
        {
                "data": {
                    "url": "../Dataset/ne_110m_graticules_30.json",
                    "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
                },
                "mark": {"type": "geoshape", "stroke": "black", "strokeOpacity": 0.2, "strokeWidth": 1}
            },
        {
            "data": {
                "url": "../Dataset/airports.csv"
            },
            "mark": {"type": "circle", "size": 20, "color": "steelblue"},
            "encoding": {
                "longitude": {"field": "Longitude", "type": "quantitative"},
                "latitude": {"field": "Latitude", "type": "quantitative"},
                "color": {"field": "Altitude", "type": "quantitative", "scale": {"range": ["#f7fbff", "#deebf7", "#c6dbef", "#9ecae1", "#6baed6", "#4292c6", "#2171b5", "#08519c", "#08306b", "#041f4a", "#02102a", "#000000"]}, "title": "Altitude (ft)"}
            }
        }
    ]
  }