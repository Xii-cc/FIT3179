{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Monthly Domestic and International Passenger Traffic Stacked Bar Chart",
    "data": {
        "url": "../Dataset/monthly_long.csv",
        "format": {"type": "csv"}
    },
    "mark": "area",
    "encoding": {
        "x": {
            "field": "Date",
            "type": "temporal",
            "title": "Date"
        },
        "y": {
            "field": "Value",
            "type": "quantitative",
            "title": "Passenger Traffic"
        },
        "color": {
            "field": "Category",
            "type": "nominal",
            "title": "Passenger Type",
            "scale": {
                "range": ["#1f77b4", "#ff7f0e"]
            }
        },
        "tooltip": [
            {
                "field": "Date",
                "type": "temporal",
                "title": "Date"
            },
            {
                "field": "Total",
                "type": "quantitative",
                "title": "Total Passenger Traffic"
            }
        ]
    },
    "config": {
        "view": {
            "strokeWidth": 0
        },
        "axis": {
            "domain": false
        }
    }
}