{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "data": {
        "url": "../Dataset/ne_10m_admin_1_states_provinces.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "#fff",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "../Dataset/my_airports_cleaned.csv",
        "format": {
          "type": "csv"
        }
      },
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {
          "field": "longitude_deg",
          "type": "quantitative"
        },
        "latitude": {
          "field": "latitude_deg",
          "type": "quantitative"
        },
        "size": {
          "field": "connectivity",
          "type": "quantitative",
          "scale": {"range": [0, 1000]}
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "scale": {
            "domain": ["small_airport", "medium_airport", "large_airport"],
            "range": ["red", "green", "blue"]
          }
        },
        "tooltip": [
          {"field": "name", "type": "nominal", "title": "Airport Name"},
          {"field": "type", "type": "nominal", "title": "Type"},
          {"field": "elevation_ft", "type": "quantitative", "title": "Elevation (ft)"}
        ]
      },
      "params": [
        {
          "name": "hover",
          "select": {"type": "point", "on": "pointerover", "nearest": true, "fields": ["iata_code"]}
        }
      ]
    },
    {
      "data": {
        "url": "../Dataset/malaysia_routes.csv",
        "format": {
          "type": "csv"
        }
      },
      "mark": {
        "type": "rule"
      },
      "transform": [
        {
          "filter": {
            "or": [
              {"param": "hover", "empty": false, "field": "Source_Airport", "equal": {"expr": "hover.iata_code"}},
              {"param": "hover", "empty": false, "field": "Destination_Airport", "equal": {"expr": "hover.iata_code"}}
            ]
          }
        },
        {
          "lookup": "Source_Airport",
          "from": {
            "data": {
              "url": "../Dataset/my_airports_cleaned.csv",
              "format": {"type": "csv"}
            },
            "key": "iata_code",
            "fields": ["longitude_deg", "latitude_deg"]
          },
          "as": ["Source_Longitude", "Source_Latitude"]
        },
        {
          "lookup": "Destination_Airport",
          "from": {
            "data": {
              "url": "../Dataset/my_airports_cleaned.csv",
              "format": {"type": "csv"}
            },
            "key": "iata_code",
            "fields": ["longitude_deg", "latitude_deg"]
          },
          "as": ["Destination_Longitude", "Destination_Latitude"]
        }
      ],
      "encoding": {
        "latitude": {"field": "Source_Latitude", "type": "quantitative"},
        "longitude": {"field": "Source_Longitude", "type": "quantitative"},
        "latitude2": {"field": "Destination_Latitude", "type": "quantitative"},
        "longitude2": {"field": "Destination_Longitude", "type": "quantitative"},
        "color": {
          "condition": {
            "param": "hover",
            "value": "red",
            "empty": false
          },
          "value": "black"
        },
        "opacity": {
          "condition": {
            "param": "hover",
            "value": 0.5,
            "empty": false
          },
          "value": 0.05
        }
      }
    }
  ]
}